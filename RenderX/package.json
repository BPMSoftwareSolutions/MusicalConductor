{
  "name": "renderx-evolution",
  "version": "1.0.0",
  "description": "RenderX Evolution - Lightweight Visual Shell with CIA/SPA Architecture",
  "type": "module",
  "scripts": {
    "dev": "npm run build:plugins && vite",
    "build": "npm run build:plugins && tsc && vite build",
    "build:plugins": "node scripts/build-plugins.js",
    "bundle:plugins": "node scripts/bundle-plugins.js",
    "preview": "vite preview",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:acceptance": "playwright test acceptance-driven-e2e.spec.ts",
    "test:acceptance:headed": "playwright test acceptance-driven-e2e.spec.ts --headed",
    "test:acceptance:debug": "playwright test acceptance-driven-e2e.spec.ts --debug",
    "test:user-stories": "playwright test generated-acceptance-tests.spec.ts",
    "generate:acceptance-tests": "node scripts/generate-acceptance-tests.js",
    "validate:user-stories": "npm run generate:acceptance-tests && npm run test:user-stories",
    "test:symphonic-e2e": "npm run test:acceptance && npm run test:user-stories",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "esbuild": "^0.19.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "glob": "^11.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "keywords": [
    "renderx",
    "visual-editor",
    "cia-architecture",
    "spa-architecture",
    "tda-validation",
    "playwright",
    "e2e-testing"
  ],
  "author": "RenderX Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
