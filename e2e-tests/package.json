{
  "name": "musical-conductor-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for MusicalConductor using Playwright",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "serve:test": "node server.js",
    "dev": "npm run test:headed",
    "setup": "npm install && npm run test:install",
    "build:plugins": "node scripts/build-plugin-bundles.js",
    "build:plugins:force": "node scripts/build-plugin-bundles.js --force",
    "build:plugins:verbose": "node scripts/build-plugin-bundles.js --verbose",
    "watch:plugins": "node scripts/watch-plugin-bundles.js"
  },
  "dependencies": {
    "musical-conductor": "git+https://github.com/BPMSoftwareSolutions/MusicalConductor.git#main"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/node": "^17.0.0",
    "http-server": "^14.1.1",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=17.0.0"
  }
}
