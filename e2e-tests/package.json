{
  "name": "musical-conductor-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for MusicalConductor using Playwright",
  "private": true,
  "scripts": {
    "pretest": "npm run build:plugins && npm run build:bundles",
    "test": "playwright test",
    "test:simple": "npm run build:plugins && npm run build:bundles && set E2E_SIMPLE=1 && playwright test tests/simple-startup.spec.ts",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "serve:test": "node server.js",
    "dev": "npm run build:plugins && npm run build:bundles && node scripts/dev-open.js",
    "setup": "npm install && npm run test:install",
    "build:plugins": "node scripts/build-plugin-bundles.js",
    "build:plugins:force": "node scripts/build-plugin-bundles.js --force",
    "build:plugins:verbose": "node scripts/build-plugin-bundles.js --verbose",
    "watch:plugins": "node scripts/watch-plugin-bundles.js",
    "build:bundles": "node scripts/build-e2e-bundles.js",
    "build:bundles:watch": "node scripts/build-e2e-bundles.js --watch",
    "build:bundles:analyze": "node scripts/build-e2e-bundles.js --analyze",
    "build:bundles:verbose": "node scripts/build-e2e-bundles.js --verbose"
  },
  "dependencies": {
    "musical-conductor": "git+https://github.com/BPMSoftwareSolutions/MusicalConductor.git#main"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/node": "^17.0.0",
    "http-server": "^14.1.1",
    "typescript": "^4.9.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "babel-loader": "^9.1.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "ts-loader": "^9.4.0",
    "process": "^0.11.10",
    "buffer": "^6.0.3"
  },
  "engines": {
    "node": ">=17.0.0"
  }
}
